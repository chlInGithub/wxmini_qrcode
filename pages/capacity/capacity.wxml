<page-meta page-style="background-color:{{bgColor}};min-height:100vh;">
</page-meta>

<view class="container">
  <view class="full-width-view view-head">
    <view class="border-1  border-blue"></view>
  </view>
  <view class="full-width-view">
    <view class="view-hand fl">
      <view class="left-hand border-1  border-red"></view>
    </view>
    <view class="fl">
      <view class="view-chest">
        <view bindtap="go_gen_code" class="item item-1 border-1 border-red">
          我要二维码
        </view>

        <view bindtap="go_see_code" class="item item-2 border-1 border-red">
          看看二维码
        </view>
      </view>
      <view class="view-body fr">
        <view bindtap="go_smart_code" class="item border-2 border-gray">
          活群码
        </view>
      </view>
    </view>

    <view class="view-hand fr">
      <view class="right-hand border-2  border-red"></view>
    </view>
    <view class="clearboth"></view>

  </view>
  <view class=" full-width-view">
    <view class="view-leg">
      <view class="left-leg fl border-2 border-blue">

      </view>
      <view class="right-leg fr border-2 border-blue">

      </view>
      <view class="clearboth"></view>
    </view>
  </view>


</view>